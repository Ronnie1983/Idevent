@page "/Cancel"
@layout NonAdminLayout
@inject NavigationManager _navigationManager

@attribute [Authorize (Roles = "SuperAdmin, Admin, Operator")]

<div class="row">
    <h1 class="col-md-12 mx-auto text-center">Idevent</h1>
</div>
<ScanCircle CircleText="Canceled" Color="YELLOW"/>
<div class="row">
    <div class="col-md-12 mx-auto">
        <h2 class="text-center">@_message</h2>
    </div>
</div>

@code {
    [Parameter]
    public string Destination { get; set; }

    [Parameter]
    public string Id { get; set; }

    private string _message = "Transaction canceled";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await Task.Delay(5000);
        _navigationManager.NavigateTo("Terminal");
    }
}
