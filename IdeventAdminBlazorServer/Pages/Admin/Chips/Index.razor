@page "/Chips"
@inject NavigationManager _navigationManager

<h1>Chips Oversigt</h1>
<br />

<input placeholder="indtast din søgning" />

<div class="container">
    <br />
    <div>
        <div class="btn-group">
            <div class="dropdown show">
                <a class="btn btn-primary m-1 dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Actions
                </a>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item">Action</a>
                    <a class="dropdown-item">Another action</a>
                    <a class="dropdown-item">Something else here</a>
                </div>
            </div>


            <button type="button" class="btn btn-primary m-1" @onclick="NavigateGoToAddChip">Add Chip</button>

            <button class="btn btn-primary m-1" data-toggle="modal" data-target="#M">Export</button>

            <!-- Modal -->
            <div class="modal fade" id="M" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Der er ikke nogen funktion her endnu</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Kommer senere
                        </div>
                    </div>
                </div>
            </div>
            <!-- Modal End -->

            <button type="button" class="btn btn-primary m-1" @onclick="NavigateGoToImport">Import</button>

        </div>
    </div>
    <br />

    <table class="table table-hover" style="text-align: center">
        <thead>
            <tr>
                <th scope="col">Selection</th>
                <th scope="col">ID</th>
                <th scope="col">User Mail</th>
                <th scope="col">From</th>
                <th scope="col">To</th>
                <th scope="col">Company</th>
                <th scope="col">Group</th>
                <th scope="col">Event</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td scope="row"><input type="checkbox"></td>
                <td>Mark</td>
                <td>Otto</td>
                <td>7/11</td>
                <td>7/12</td>
                <td>Roskile festival</td>
                <td>VIP</td>
                <td>Roskilde festival</td>
                <td>
                    <div class="btn-group">
                        <button class="btn btn-primary m-1" @onclick="NavigateGoToEditChip">Edit</button>
                        <button class="btn btn-primary m-1" @onclick="NavigateGoToChipDetail">Details</button>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>


    @code {

    private void NavigateGoToImport()
    {
        _navigationManager.NavigateTo("importerchip");
    }
    private void NavigateGoToAddChip()
    {
        _navigationManager.NavigateTo("addchip");
    }
    private void NavigateGoToEditChip()
    {
        _navigationManager.NavigateTo("editchip");
    }
        private void NavigateGoToChipDetail()
    {
        _navigationManager.NavigateTo("chipdetail");
    }
    }
