@page "/Chips"
@using System.Reflection.Metadata


@inject NavigationManager _navigationManager

<h1>Chips Oversigt</h1>
<br />

<input placeholder="indtast din søgning" />

<div class="container">
    <br />
    <div>
        <div class="btn-group">
            <div class="dropdown show">
                <button class="btn btn-primary m-1">Select all</button>
                <a class="btn btn-primary m-1 dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Actions
                </a>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">

                    <a class="dropdown-item">Move To Event</a>
                    <a class="dropdown-item">Assign Group</a>
                    <a class="dropdown-item" style="color: red">Delete</a>
                </div>
            </div>

            <NavigateButton PageToNavigateTo="AddChip" ButtonText="Add Chip" />

            <button class="btn btn-primary m-1" data-toggle="modal" data-target="#M">Export</button>

            <!-- Modal -->
            <div class="modal fade" id="M" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Der er ikke nogen funktion her endnu</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                        <div class="modal-body">
                            Kommer senere
                        </div>
                    </div>
                </div>
            </div>
            <!-- Modal End -->

            <NavigateButton PageToNavigateTo="ImporterChip" ButtonText="Import" />

        </div>
    </div>
    <br />

    <table class="table table-hover" style="text-align: center">
        <thead>
            <tr>
                <th scope="col">Selection</th>
                <th scope="col">ID</th>
                <th scope="col">User Mail</th>
                <th scope="col">From</th>
                <th scope="col">To</th>
                <th scope="col">Group</th>
                <th scope="col">Event</th>
                <th scope="col">Company</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ChipModel chip in _chips)
            {
                <tr>
                    <td scope="row"><input type="checkbox"></td>
                    <td>@chip.Id</td>
                    <td>@chip.HashedId</td>
                    <td>@chip.ValidFrom</td>
                    <td>@chip.ValidTo</td>
                    <td>@chip.Group.Name</td>
                    <td>@chip.Event.Name</td>
                    <td>@chip.Company.Name</td>
                    <td>
                        <div class="btn-group">
                            @*<NavigateButton PageToNavigateTo=@(NavigationArgument("EditEvent/", eventModel.Id)) ButtonText="Edit event"/>*@

                            <NavigateButton PageToNavigateTo=@(NavigationArgument("EditChip/", chip.Id)) ButtonText="Edit" />
                            <NavigateButton PageToNavigateTo=@(NavigationArgument("ChipDetail/", chip.Id)) ButtonText="Details" />
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@code {

    [Parameter]
    public string ChipId { get; set; }

    protected override void OnInitialized()
    {
        CompanyModel companyName = new();
        companyName.Name = "test";

        EventModel eventName = new();
        eventName.Name = "roskilde festival";

        ChipGroupModel groupName = new();
        groupName.Name = "VIP";


        _chips = new List<ChipModel>()
        {
            new ChipModel(1, "#f8vadjkl",  DateTimeOffset.Now, new DateTimeOffset(),groupName,eventName,companyName),
            new ChipModel(2, "#dabussrb",  DateTimeOffset.Now, new DateTimeOffset(),groupName,eventName,companyName),
            new ChipModel(2, "ragjr#@!l",  DateTimeOffset.Now, new DateTimeOffset(),groupName,eventName,companyName),
        };
    }

    private List<ChipModel> _chips;

    private string NavigationArgument(string navigationPrefix, int modelId)
    {
        return $"{navigationPrefix}{modelId}";
    }
}
